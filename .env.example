OLTP_PG_PORT=5432
OLTP_PG_USER=mqtt_ingestor
OLTP_PG_PASSWORD=ChangeMe_MqttIngestor_2024!
OLTP_PG_DATABASE=datayoti_db

# =============================================================================
# CONFIGURATION ETL/ELT
# =============================================================================
# Fréquence de synchronisation (pour les futures pipelines)
ETL_SYNC_INTERVAL_MINUTES=60
ETL_BATCH_SIZE=1000